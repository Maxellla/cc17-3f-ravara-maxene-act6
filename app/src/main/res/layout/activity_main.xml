<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 Days Of Wellness"
        android:textSize="30sp"
        android:layout_marginLeft="10sp"
        android:textColor="@color/black"
        ></TextView>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="20sp"
        android:background="@color/grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day 1"
            android:textSize="17dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="7sp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spend 15 minutes outdoor"
            android:textSize="20dp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="15sp"
            ></TextView>

        <ImageView
            android:layout_width="270sp"
            android:layout_height="200sp"
            android:src="@drawable/day1"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Schedule time to go outside. This could be\n for a walk or even taking a meeting while\n strolling around your neighborhood"
            android:textSize="17dp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="15sp"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="20sp"
        android:background="@color/grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day 2"
            android:textSize="17dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="7sp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen to a new podcast or audiobook"
            android:textSize="20dp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="15sp"
            ></TextView>

        <ImageView
            android:layout_width="270sp"
            android:layout_height="200sp"
            android:src="@drawable/day2"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover a podcast or audiobook on a topic that interest you. or try something completely new to expand your knowledge"
            android:textSize="17dp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="15sp"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="20sp"
        android:background="@color/grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day 3"
            android:textSize="17dp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="7sp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen to a new podcast or audiobook"
            android:textSize="20dp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="15sp"
            ></TextView>

        <ImageView
            android:layout_width="270sp"
            android:layout_height="200sp"
            android:src="@drawable/day2"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover a podcast or audiobook on a topic that interest you. or try something completely new to expand your knowledge"
            android:textSize="17dp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="15sp"
            ></TextView>

    </LinearLayout>

</LinearLayout>